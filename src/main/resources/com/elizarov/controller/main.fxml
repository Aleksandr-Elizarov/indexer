<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="900.0"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.elizarov.controller.MainViewController"
          stylesheets="/styles.css">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="430.0" minWidth="155.0" prefWidth="320.0"/>
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="155.0" prefWidth="550.0"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
    <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="ALWAYS"/>
    <RowConstraints maxHeight="1.7976931348623157E308" minHeight="50.0" prefHeight="420.0" vgrow="ALWAYS"/>
    <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
  </rowConstraints>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>
  <TextField id="search" fx:id="search" alignment="CENTER" prefHeight="45.0" prefWidth="550.0"
             promptText="lucene syntax" GridPane.columnIndex="1" GridPane.rowIndex="1">
    <GridPane.margin>
      <Insets/>
    </GridPane.margin>
  </TextField>
  <Button id="buttonCreateIndexes" fx:id="buttonCreateIndexes" mnemonicParsing="false" onAction="#createIndexes" prefHeight="45.0"
          prefWidth="150.0" text="Create Indexes" textAlignment="CENTER" GridPane.halignment="RIGHT">
    <font>
      <Font size="17.0"/>
    </font>
    <GridPane.margin>
      <Insets right="70.0"/>
    </GridPane.margin>
  </Button>
  <WebView id="result" fx:id="result" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
           GridPane.rowIndex="2"/>
  <ScrollPane id="scrollPane" fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2"/>
  <Button id="buttonChooseIndexFolder" fx:id="buttonChooseIndexFolder" mnemonicParsing="false" prefHeight="45.0"
          prefWidth="50.0" GridPane.halignment="RIGHT">
    <GridPane.margin>
      <Insets right="5.0"/>
    </GridPane.margin>
  </Button>
</GridPane>
